<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.12"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.dutymanager.controller.HolidayDBManagerController"
            prefWidth="700" prefHeight="450">

    <Button text="홈으로"
            onAction="#onGoHomeClick"
            AnchorPane.topAnchor="10"
            AnchorPane.rightAnchor="10"
            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 8px;"
    />

    <VBox alignment="TOP_CENTER" spacing="20"
          AnchorPane.topAnchor="50"
          AnchorPane.leftAnchor="30"
          AnchorPane.rightAnchor="30">

        <Label text="공휴일 데이터베이스(DB) 관리"
               style="-fx-font-size: 26px; -fx-font-weight: bold;" />

        <HBox spacing="10" alignment="CENTER">
            <Label text="연도" prefWidth="60" alignment="CENTER_RIGHT" />
            <TextField fx:id="yearField" prefWidth="80" promptText="yyyy" />

            <Label text="월" prefWidth="30" alignment="CENTER_RIGHT" />
            <TextField fx:id="monthField" prefWidth="60" promptText="mm" />

            <Label text="일" prefWidth="30" alignment="CENTER_RIGHT" />
            <TextField fx:id="dayField" prefWidth="60" promptText="dd" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="설명" prefWidth="60" alignment="CENTER_RIGHT" />
            <TextField fx:id="descriptionField" prefWidth="250" promptText="설명(예: 삼일절)" />
        </HBox>

        <HBox alignment="CENTER" spacing="20">
            <Button text="휴일 추가"
                    onAction="#onAddHolidayButtonClick"
                    prefWidth="140"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px;" />

            <Button text="휴일 삭제"
                    onAction="#onRemoveHolidayButtonClick"
                    prefWidth="140"
                    style="-fx-background-color: #FF5722; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px;" />

            <Button text="DB 열기"
                    onAction="#onDBOpenButtonClick"
                    prefWidth="140"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10px;" />
        </HBox>

        <Label fx:id="successText"
               text=""
               style="-fx-text-fill: #00C853; -fx-font-size: 16px; -fx-font-weight: bold;" />
    </VBox>

</AnchorPane>