<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.dutymanager.controller.DutyCreateController"
            prefWidth="700" prefHeight="520">

    <Button text="홈으로"
            onAction="#onGoHomeClick"
            AnchorPane.topAnchor="10"
            AnchorPane.rightAnchor="10"
            style="-fx-background-color: #2196F3; -fx-text-fill: Black; -fx-font-size: 14px; -fx-background-radius: 8px;"
            prefWidth="80" />

    <VBox alignment="TOP_CENTER" spacing="25"
          AnchorPane.topAnchor="60"
          AnchorPane.rightAnchor="30"
          AnchorPane.leftAnchor="30">

        <Label text="당직 기간 선택"
               style="-fx-font-size: 26px; -fx-font-weight: bold;" />

        <HBox spacing="15" alignment="CENTER">
            <Label text="당직 시작일자"
                   prefWidth="110"
                   alignment="CENTER_RIGHT" />

            <TextField fx:id="startYearField" promptText="yyyy" prefWidth="80" />
            <TextField fx:id="startMonthField" promptText="mm" prefWidth="60" />
            <TextField fx:id="startDayField" promptText="dd" prefWidth="60" />
        </HBox>

        <HBox spacing="15" alignment="CENTER">
            <Label text="당직 종료일자"
                   prefWidth="110"
                   alignment="CENTER_RIGHT" />

            <TextField fx:id="endYearField" promptText="yyyy" prefWidth="80" />
            <TextField fx:id="endMonthField" promptText="mm" prefWidth="60" />
            <TextField fx:id="endDayField" promptText="dd" prefWidth="60" />
        </HBox>

        <VBox spacing="10" alignment="CENTER">
            <Button text="당직자 순서 엑셀파일 선택"
                    onAction="#onSelectExcelFileClick"
                    prefWidth="240"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: Black; -fx-font-size: 15px; -fx-background-radius: 10px;" />

            <Label fx:id="selectedFilePathLabel"
                   text="선택된 파일 없음"
                   style="-fx-font-family: 'Apple SD Gothic Neo'; -fx-font-size: 14px;" />
        </VBox>

        <Button text="당직 결과 계산"
                prefWidth="220"
                prefHeight="38"
                onAction="#onCalculateDutyResultClick"
                style="-fx-background-color: #FF9800; -fx-text-fill: Black; -fx-font-size: 17px; -fx-background-radius: 10px;" />

        <Label fx:id="successText"
               text=""
               style="-fx-text-fill: #00C853; -fx-font-size: 16px; -fx-font-weight: bold;" />

        <Label fx:id="failureText"
               text=""
               style="-fx-text-fill: #FF5722; -fx-font-size: 16px; -fx-font-weight: bold;" />
    </VBox>
</AnchorPane>