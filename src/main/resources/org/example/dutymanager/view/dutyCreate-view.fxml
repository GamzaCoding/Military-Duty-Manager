<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.dutymanager.controller.DutyCreateController"
            prefHeight="400.0" prefWidth="600.0">

    <children>
        <VBox alignment="CENTER" spacing="20"
              AnchorPane.topAnchor="20"
              AnchorPane.bottomAnchor="20"
              AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20">

            <!-- 제목 -->
            <Label text="당직 기간 선택" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

            <HBox spacing="20" alignment="CENTER">
                <Label text="당직 시작일자" prefWidth="100" alignment="CENTER_RIGHT" />
                <TextField fx:id="startYearField" promptText="년" prefWidth="70" />
                <TextField fx:id="startMonthField" promptText="월" prefWidth="50" />
                <TextField fx:id="startDayField" promptText="일" prefWidth="50" />
            </HBox>

            <HBox spacing="20" alignment="CENTER">
                <Label text="당직 종료일자" prefWidth="100" alignment="CENTER_RIGHT" />
                <TextField fx:id="endYearField" promptText="년" prefWidth="70" />
                <TextField fx:id="endMonthField" promptText="월" prefWidth="50" />
                <TextField fx:id="endDayField" promptText="일" prefWidth="50" />
            </HBox>

            <VBox spacing="20" alignment="CENTER_LEFT">
                <Button text="당직자 순서 엑셀파일 선택" onAction="#onSelectExcelFileClick" prefWidth="200" />
                <Label fx:id="selectedFilePathLabel" text="선택된 파일 없음" />
            </VBox>

            <!-- 계산 버튼 -->
            <Button text="당직 결과 계산"
                    prefWidth="200"
                    prefHeight="35"
                    onAction="#onCalculateDutyResultClick" />

            <!-- 결과 표시용 -->
            <Label fx:id="resultMessage" text="" style="-fx-text-fill: green;" />
        </VBox>
    </children>

</AnchorPane>